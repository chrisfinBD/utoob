<body id="movieshow">
<h1 id="movietitle"><%= @movie.title %></h1>
<table id="movietitle">
  <tr>
    <td>Title:</td>
    <td><%= @movie.title %></td>
  </tr>
  <tr>
    <td>Duration:</td>
    <td><%= @movie.duration %></td>
  </tr>
  <tr>
    <td>Genre:</td>
    <td><%= @movie.genre %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%=link_to @movie.description, @movie.description %></td>
  </tr>
  <tr>
    <td>Trailer:</td>
    <td><%=link_to @movie.trailer, @movie.trailer %></td>
  </tr>
    <td><%= link_to 'Edit', edit_movie_path(@movie) %></td>
    <td><%= link_to 'Back', movies_path %></td>
  </tr>
</table>
<p><%= content_tag(:iframe,'', width: 720, height: 486, src: @movie.trailer) %></p>


<h5>Add new comment<h5>
<%= render("comment_form") %>
 



<% @comments.each do |comment| %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= comment.user.name %> commented at <%= comment.updated_at %></h5>
      <p class="card-text"><%= comment.body %></p>

      <%= link_to 'Edit', edit_comment_path(comment.id), class: "card-link" %></td>
      <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    </div>
  </div>
<% end %>





